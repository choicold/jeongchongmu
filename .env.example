# .env.example

# postgresql 데이터베이스 구성
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jeongchongmu
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_password_here # 실제 비밀번호 대신 플레이스홀더

# 서버 구성
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Naver Clova OCR
NAVER_OCR_API_URL=https://your-ocr-endpoint.apigw.ntruss.com
NAVER_OCR_SECRET_KEY=your_secret_key_here

# Claude API
CLAUDE_API_KEY=sk-ant-your-api-key-here
CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# Firebase Cloud Messaging (Push Notification)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_PATH=classpath:firebase/service-account.json

# JWT Secret
# openssl rand -base64 32 명령어로 시크릿 키 생성 및 사용
JWT_SECRET=your_jwt_secret_key_256bit_here
JWT_EXPIRATION=86400000
