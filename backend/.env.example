# ====================
# DB (로컬 개발)
# ====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jeongchongmu
DB_USERNAME=admin
DB_PASSWORD=your_password

# ====================
# Database (Shared/Production - Supabase)
# ====================
# SUPABASE_URL=https://xxxxx.supabase.co
# SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# ====================
# JWT
# ====================
# 생성: openssl rand -base64 64
JWT_SECRET=your_secret_key
JWT_EXPIRATION=604800000
# 7일 = 7 * 24 * 60 * 60 * 1000

# ====================
# Claude API
# ====================
# https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_MAX_TOKENS=4096

# ====================
# Server
# ====================
SERVER_PORT=8080
ALLOWED_ORIGINS=http://localhost:19006,exp://192.168.your.address:8081

# ====================
# Redis
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379

# ====================
# File Storage
# ====================
# Supabase Storage for receipts
STORAGE_BUCKET_NAME=receipts
STORAGE_PUBLIC_URL=https://xxxxx.supabase.co/storage/v1/object/public/receipts

# ====================
# Logging
# ====================
LOG_LEVEL=INFO
